    </div>
    <% if (result) { %>
    <div class="table-wrapper">
        <table class="table table-hovered">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Label</th>
                    <th scope="col">Year</th>
                    <th scope="col">Artist</th>
                    <th scope="col">Average Score</th>
                </tr>
            </thead>
            <tbody>
                <% results.forEach((record, index) => { %>
                    <tr>
                        <td><%= record.label %></td>
                        <td><%= record.year %></td>
                        <td><%= record.artist %></td>
                        <td><%= record.avgScore %></td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
    <% } %>
    
    <script>
        $("#letter-select").on("change", function () {
            let choice = $("#letter-select").val()
            $(".label-option").attr("hidden", false)

            if (choice === "blank") {

                $("#field1").attr("disabled", true)

            } else if (choice === "#") {

                $("#field1").attr("disabled", false)
                $(".label-option")
                    .filter(function () {
                        let regex = /^[a-z]/
                        return regex.test($(this).val())
                    }).attr("hidden", true)

            } else {

                $("#field1").attr("disabled", false)
                $(".label-option")
                    .filter(function () {
                        return !$(this).val().startsWith(choice)
                    }).attr("hidden", true)

            }
        })

        $("#field1").on("change", function () {
            if ($("#field1").val() === "blank") {
                $("#submit").attr("disabled", true)
            } else {
                $("#submit").attr("disabled", false)
            }
        })
    </script>
